server {
	listen   0.0.0.0:80 ; ## listen for ipv4; this line is default and implied
	root /var/www/adtopy/sites/adtopy/html;
    index index.html;
    server_name adtopy.com www.adtopy.com;

    access_log  /var/log/nginx/adtopy.access.log;
    error_log   /var/log/nginx/adtopy.error.log notice;

    location / {
    try_files $uri /index.php?site=adtopy&subpath=$uri&$args;
    fastcgi_param PHP_VALUE "include_path=/var/www/config:/var/www/adtopy:.";
    }

    include common.inc;
}

