server {
	listen   0.0.0.0:80 ; ## listen for ipv4; this line is default and implied


	root /var/www/adtopy/sites/reflection/html;
    index index.html;
    server_name reflection.adtopy.com;

    access_log  /var/log/nginx/reflection.access.log;
    error_log   /var/log/nginx/reflection.error.log notice;

    location / {
    try_files $uri /index.php?site=reflection&subpath=$uri&$args;
    fastcgi_param PHP_VALUE "include_path=/var/www/config:/var/www/adtopy:.";
    }


    include common.inc;
}

