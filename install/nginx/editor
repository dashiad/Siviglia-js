server {
	listen   0.0.0.0:80 ; ## listen for ipv4; this line is default and implied

	root /var/www/adtopy/sites/editor/html;
    index index.html;
    server_name editor.adtopy.com;

    access_log  /var/log/nginx/editor.access.log;
    error_log   /var/log/nginx/editor.error.log notice;

    location / {
        try_files $uri /index.php?site=editor&subpath=$uri&$args;
        fastcgi_param PHP_VALUE "include_path=/var/www/config:/var/www/adtopy:.";
    }



    include common.inc;
}

