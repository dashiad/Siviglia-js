<?php
    $type=$model->__getField($name)->getType();
    echo '<img src="'.WEBPATH."/".$model->{$name}.'"';
    if(!$description)
    {
        if($type->hasDescription())
        {
                $description=$type->getDescription();
        }
        if($description)
                echo ' alt="'.$description.'"';
    }
    if($width)
        echo ' width="'.$width.'"';
    if($height)
        echo ' height="'.$height.'"';
    echo ">";
?>

