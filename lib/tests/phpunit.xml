<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         backupGlobals               = "false"
         backupStaticAttributes      = "false"
         colors                      = "true"
         convertErrorsToExceptions   = "true"
         convertNoticesToExceptions  = "true"
         convertWarningsToExceptions = "true"
         processIsolation            = "false"
         stopOnFailure               = "false"
         syntaxCheck                 = "false">

    <testsuites>
        <testsuite name="Lib tests">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../model</directory>
            <directory suffix=".php">../model/types</directory>
            <directory suffix=".php">../model/states</directory>
            <directory suffix=".php">../model/permissions</directory>
            <directory suffix=".php">../storage</directory>
            <directory suffix=".php">../storage/Mysql</directory>
            <directory suffix=".php">../storage/ES</directory>
        </whitelist>
    </filter>

    <php>
        <env name="APP_ENV" value="testing"/>
    </php>

</phpunit>
